#include <stdio.h>

int main() {
    int python, c, arduino, be;
    float total, avg;
    printf("\t\t\t\tMarksheet\n");
    printf("Name: Abdul Rahman\n");
    printf("Class: IoT\n");
    printf("Institute: Navttec\n");
    
    printf("Subject\t\tTotal Marks\t\tMarks\n");
    
    printf("Phython:\t");
    printf("100\t\t\t\t");
    scanf("%d",&python);
    
    printf("C:\t\t\t");
    printf("100\t\t\t\t");
    scanf("%d",&c);
    
    printf("Arduino:\t");
    printf("100\t\t\t\t");
    scanf("%d",&arduino);

    printf("B.E:\t\t");
    printf("100\t\t\t\t");
    scanf("%d",&be);

    total=be+c+python+arduino;
    avg=total/4;
    printf("Total:\t\t%.2f\n", total);
    printf("Average:\t%.2f\n", avg);
    printf("Percentage:\t%.2f\n", avg);

    if(avg>=80){
    printf("grade: \t\tA+");}
    else if(avg>=70){
    printf("grade:  \t\tA");}
    else if(avg>=60){
    printf("grade:  \t\tB");}
    else if(avg>=50){
    printf("grade:  \t\tC");}
    else if(avg>=40){
    printf("grade:  \t\tD");}
    else if(avg>=33){
    printf("grade:  \t\tE");}
    else if(avg<33){
    printf("grade:  \t\tF");}
}

